pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'chaitu221/jenkins-cicd-demo'
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-token',
                    url: 'https://github.com/osuruchaitanya/Task-2-sample-Jenkins-pipeline-CICD-.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                bat  docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests (optional)'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    bat 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                    bat "docker push ${DOCKER_IMAGE}:${DOCKER_TAG}"
                }
            }
        }

        stage('Deploy') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhubpat',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    bat 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                    bat 'docker tag $DOCKER_IMAGE:$DOCKER_TAG $DOCKER_USER/$DOCKER_IMAGE:$DOCKER_TAG'
                    bat 'docker push $DOCKER_USER/$DOCKER_IMAGE:$DOCKER_TAG'
                    bat 'docker run -d -p 3000:3000 $DOCKER_USER/$DOCKER_IMAGE:$DOCKER_TAG'
                }
            }
        }
    }
}
